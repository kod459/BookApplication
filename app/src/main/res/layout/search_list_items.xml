<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="2dp"
        android:src="@mipmap/ic_launcher_round"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleSearchItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Display title"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/categorySearchItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Display category"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/authorSearchItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Display author"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/priceSearchItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Display price"
                android:textSize="26sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>